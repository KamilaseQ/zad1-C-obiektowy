CXX = g++                # kompilator C++
CXXFLAGS = -Wall -Wextra -pedantic -std=c++17

# Domy랇na regu쓰 - po wpisaniu "make" w konsoli:
all: zad1

# Regu쓰 buduj젺a plik wykonywalny:
zad1: Fraction.o zad1.o
	$(CXX) $(CXXFLAGS) -o zad1 Fraction.o zad1.o

# Regu쓰 kompilacji Fraction.cpp do Fraction.o:
Fraction.o: Fraction.cpp Fraction.h
	$(CXX) $(CXXFLAGS) -c Fraction.cpp

# Regu쓰 kompilacji zad1.cpp do zad1.o:
zad1.o: zad1.cpp Fraction.h
	$(CXX) $(CXXFLAGS) -c zad1.cpp

# Usuwanie plik雕 porednich i programu wykonywalnego:
clean:
	rm -f *.o zad1